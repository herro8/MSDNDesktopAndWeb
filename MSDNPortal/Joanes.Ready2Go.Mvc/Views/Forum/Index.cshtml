                    <span class="icon"> <i class="icon-hand-right"></i> </span>
                    <h5>Detailed Activities/Team Daily Target: 251/Total Volume: @count</h5>
                </div>
                <div class="widget-content">
                    <ul>
                        @foreach (var act in activity)
                        {

                            <li>@Html.Raw(act.Alias+"&nbsp;&nbsp;"+act.Comment)</li>
                        }

                    </ul>

                </div>
            </div>
        </div>

    </div>
</div>